generator client {
  provider = "prisma-client-js"
  previewFeatures = ["extendedIndexes"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Card {
  id String @id @default(uuid())
  name String
  edition String
  language Language
  foil Boolean
  price Decimal
  quantity Int
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  owner User @relation(fields: [ownerId], references: [id])
  ownerId String

  @@index([ownerId], type: Hash)
  @@map("cards")
}

enum Language {
  ENGLISH
  PORTUGUESE
  JAPANESE
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  cards Card[]

  @@map("users")
}